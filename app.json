{
  "expo": {
    "name": "Walk2Gether",
    "slug": "walkmate",
    "version": "1.1.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FEF7DC"
    },
    "scheme": "walk2gether",
    "assetBundlePatterns": ["**/*", "assets/animations/*.lottie"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.projectwalk2gether.walk2gether",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow this app to access your location.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow this app to access your location when using the app to create walks in your local area.",
        "NSLocationAlwaysUsageDescription": "We need your location to track your walks even when the app is in the background.",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"],
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app uses the camera to take photos and videos for your walks, if you choose.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "walk2gether",
              "app-1-381508807420-ios-550916deb68528594f0579"
            ]
          }
        ]
      },
      "config": {
        "googleMapsApiKey": "AIzaSyAjnbays5Hi7wYTj9PLljDDFJzZq3Dh3z8"
      }
    },
    "android": {
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "projectwalk2gether.org",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "package": "org.projectwalk2gether.walk2gether",
      "permissions": [
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/crashlytics",
      "expo-updates",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Walk2Gether to use your location to track your position during walks, even when the app is in the background.",
          "locationAlwaysPermission": "Allow Walk2Gether to use your location to track your position during walks, even when the app is in the background.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      "expo-background-task"
    ],
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/7b384d5a-3e2e-4c79-895f-30255a67819a"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "7b384d5a-3e2e-4c79-895f-30255a67819a"
      },
      "googleMapsApiKey": "AIzaSyAjnbays5Hi7wYTj9PLljDDFJzZq3Dh3z8",
      "emulatorsEnabledInDev": false
    },
    "owner": "michaeldawson"
  }
}
